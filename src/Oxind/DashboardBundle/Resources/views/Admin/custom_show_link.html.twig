{% extends 'SonataAdminBundle:CRUD:base_show_field.html.twig' %}
{% block field %}
{% spaceless %}
    {% if value is empty %}
        &nbsp;
    {% else %}
        {% set url_address = field_description.options.url %}
        <a href="{{ url_address }}" {% if field_description.options.target is defined %} target="{{ field_description.options.target }}" {% endif %}>
		    {%- if field_description.options.text is defined -%}
			{{ field_description.options.text|trans({}, admin.translationdomain) }}
            {%- elseif field_description.options.safe -%}
                {{- value|raw -}}
            {%- else -%}
                {{- value -}}
            {%- endif -%}
        </a>
    {% endif %}
        {# Set download link for documents #}
        {% set btn_download = field_description.options.btn_download %}
        <span style="margin-left: 10px">
            <a href="{{ btn_download.url }}" class="btn" id="" >
                {%- if btn_download.text is defined -%}
                    {{ btn_download.text|trans({}, admin.translationdomain) }}
                {% endif %}
            </a>
        </span>
{% endspaceless %}
{% endblock %}
