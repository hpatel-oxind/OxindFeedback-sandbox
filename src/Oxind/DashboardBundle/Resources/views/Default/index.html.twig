            <script type="text/javascript">
                $(function() {
                    $('label input[type="checkbox"], label input[type="radio"]').on('click', function() {
                        $('label input[type="checkbox"], label input[type="radio"]').each(function() {
                            $(this).is(':checked') ? $(this).parent().addClass('active') : $(this).parent().removeClass('active');
                        })
                    })
                })
            </script>
            
{% endblock %}

